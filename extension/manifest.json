{
  "name": "Translator",
  "version": "1.0",
  "description": "This extension will output translated speech of a selected word.",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["extension.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon":  "icon.png"
  },

  "manifest_version": 2
}
