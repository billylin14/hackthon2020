{
  "name": "Translator",
  "version": "1.0",
  "description": "This extension will output translated speech of a selected word.",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "content_scripts":[{
    "matches" : ["<all_urls>"],
    "js": ["jquery.min.js","popup.js","extension.js"]
  }],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon":  "icon.png"
  },
  "content_security_policy": "script-src 'self' https://kit.fontawesome.com/542f9ba16d.js; object-src 'self'",
  "manifest_version": 2
}
